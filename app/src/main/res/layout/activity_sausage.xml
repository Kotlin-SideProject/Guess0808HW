<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SausageActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sausage Game"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Your : "
        app:layout_constraintEnd_toEndOf="@+id/your_dice2"
        app:layout_constraintStart_toStartOf="@+id/your_dice1"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer : "
        app:layout_constraintEnd_toEndOf="@+id/com_dice2"
        app:layout_constraintStart_toStartOf="@+id/com_dice1"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <Button
        android:id="@+id/dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:text="Dice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/sausage_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Result : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice" />

    <ImageView
        android:id="@+id/your_dice1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/dice_one"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/your_dice2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/your_dice1"
        app:layout_constraintTop_toTopOf="@+id/your_dice1"
        app:srcCompat="@drawable/dice_one"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/your_dice3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/your_dice1"
        app:layout_constraintTop_toBottomOf="@+id/your_dice1"
        app:srcCompat="@drawable/dice_one"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/your_dice4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/your_dice3"
        app:layout_constraintTop_toBottomOf="@+id/your_dice2"
        app:srcCompat="@drawable/dice_one"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/com_dice1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/com_dice2"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/dice_one"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/com_dice2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/com_dice1"
        app:srcCompat="@drawable/dice_one"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/com_dice3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/com_dice1"
        app:layout_constraintTop_toBottomOf="@+id/com_dice1"
        app:srcCompat="@drawable/dice_one"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/com_dice4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/com_dice3"
        app:layout_constraintTop_toBottomOf="@+id/com_dice2"
        app:srcCompat="@drawable/dice_one"
        tools:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>